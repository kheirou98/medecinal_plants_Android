<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nature_design">

    <TextView
        android:text="Prendre une photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewfinal"
        android:textSize="18sp"
        android:layout_marginBottom="217dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="?attr/colorControlNormal" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:onClick="buCapture"
        android:background="@drawable/ic_camera_alt_white"
        android:layout_above="@+id/textViewfinal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Gallerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mmm"
        android:textSize="18sp"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textViewfinal"
        android:textColor="@android:color/background_light" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnChoose"
        android:onClick="buGallerie"
        android:background="@drawable/ic_photo_library_white"
        android:layout_alignBaseline="@+id/mmm"
        android:layout_alignBottom="@+id/mmm"
        android:layout_toEndOf="@+id/mmm" />

</RelativeLayout>