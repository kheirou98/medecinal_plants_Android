<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marron"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_account_circle_black_24dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ic_account_circle_black_24dp"/>
                <EditText
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MEDKOUR Kheir Eddine"
                    android:enabled="false"
                    android:id="@+id/ed1"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="21sp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ic_local_phone_black_24dp"/>
                <EditText
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0559861954"
                    android:inputType="number"
                    android:enabled="false"
                    android:id="@+id/ed2"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="21sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_gravity="center_vertical"
                android:layout_height="36dp"
                android:background="@drawable/ic_info_black_24dp"/>
            <EditText
                android:textStyle="bold"
                android:id="@+id/ed3"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:enabled="false"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:text="kheirou"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_home_black_24dp"/>
            <EditText
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:id="@+id/ed4"
                android:layout_width="wrap_content"
                android:enabled="false"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="kouba"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_group_black_24dp"/>
            <EditText
                android:textStyle="bold"
                android:id="@+id/ed5"
                android:enabled="false"
                android:clickable="false"
                android:textColor="#fff"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Homme"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape"
        android:text="Modifier"
        android:textAlignment="center"
        android:textColor="#000"
        android:visibility="visible" />
    <Button
        android:textColor="#fff"
        android:id="@+id/ok"
        android:background="@drawable/ic_check_circle_black_24dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        />
</LinearLayout>