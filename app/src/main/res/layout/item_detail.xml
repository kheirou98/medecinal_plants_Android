<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.acer.finalapp.PlanteDetail"
    android:background="@drawable/fonf">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:weightSum="1">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plantename"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textAllCaps="true"
                android:fontFamily="sans-serif" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />

            <ImageView
                android:id="@+id/plante_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:background="@drawable/animation" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/plantefamille"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/plantetype"
                        android:textColor="?attr/actionMenuTextColor" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nomlatin"
                        android:textColor="@android:color/background_dark" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:text="  Save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/background_dark" />

                    <Button
                        android:onClick="buttonSave"
                        android:layout_height="70dp"
                        android:id="@+id/BTN"
                        android:background="@drawable/save"
                        android:layout_weight="2"
                        android:layout_width="70dp"
                        android:textColor="@color/colorPrimaryDark" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <TextView
                            android:text="Supprimer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewdelete"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/background_dark" />

                        <Button
                            android:onClick="buttonSave"
                            android:layout_height="70dp"
                            android:id="@+id/delete"
                            android:background="@drawable/ic_delete_forever_black_24dp"
                            android:layout_weight="2"
                            android:layout_width="70dp"
                            android:textColor="@color/colorPrimaryDark" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/traithor"
                android:id="@+id/imageView"
                android:background="@drawable/traithor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mmm" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/partieUti"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorAccent" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/partieUtiContxt"
                android:layout_weight="1"
                android:background="@drawable/animation"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/PlantPropriete"
                android:textColor="@color/colorAccent"
                android:textStyle="normal|bold|italic"
                android:textSize="18sp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/PlantProprieteCtxt"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/animation" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plantePosologie"
                android:textColor="@color/colorAccent"
                android:textStyle="normal|bold|italic"
                android:textSize="18sp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plantePosologieCtxt"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/animation" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/panteEmploi"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic"
                android:textColor="@color/colorAccent" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/panteEmploiCtxt"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/animation" />

            <TextView
                android:id="@+id/plante_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
